<article class="post">
    <header>
        <nav>
          <%=user_avatar(post.created_by)%>
          <h4><%= post.created_by.username  %></h4>
        </nav>

        <nav class="actions">
          <div class="action">
            <%= embedded_svg "options.svg"%>
          </div>
        </nav>
    </header>

    <section class="image">
        <%=image_tag post.photo.url%>
    </section>

    <div class="details">
        <section class="actions">
            <nav>
                <div class="action">
                    <div class="like">
                        <%= render "likes/like", post: post%>
                    </div>
                </div>

                <div class="action">
                    <%=link_to post do%>
                        <%=embedded_svg "comment.svg"%>
                    <%end%>
                </div>

                <div class="action">
                    <%= embedded_svg "share.svg"%>
                </div>
            </nav>

            <nav>
                <div class="action">
                    <%= embedded_svg "save.svg"%>
                </div>
            </nav>
        </section>

        <section class="description">
            <p><strong><%= post.created_by.username%></strong> <%= post.body%></p>
        </section>

        <section class="created-at">
            <%= time_ago_in_words(post.id) %> atr√°s
        </section>
    </div>
</article>